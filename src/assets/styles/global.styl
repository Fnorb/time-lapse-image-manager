// Color variables
colorBlack = #000000
colorDarkBlue = #0B192C
colorlightBlue = #1E3E62
colorOrange = #FF6500

html, body, #app, .app-container
  height 100%
  background-color colorlightBlue
  overflow hidden

.app-container
  display flex
  flex-direction column
  height 100%
  background-color colorlightBlue

.header
  background-color colorDarkBlue
  color white
  padding 0 20px 0 20px
  display flex
  justify-content center
  align-items center
  height 80px

.content
  height 100%
  background-color #f4f4f4

  .processError
    box-shadow 0px 0px 25px 25px rgba(255, 0, 0, 0.2) inset, 0px 0px 5px 5px rgba(255, 0, 0, 0.5) inset
    height 100%

    div
      position relative
      top 10px
      left 10px
      width fit-content

  .processOutput
    width 100%
    height 100%

.footer
  height 80px
  background-color colorlightBlue

h1
  margin 0
  font-size 2rem

.config
  grid-area config
  height 100%

.output
  grid-area output
  background-color #fff
  padding 15px

.log-container
  max-height 300px
  overflow-y auto
  border 1px solid #ccc
  padding 10px
  background-color #f9f9f9
  font-family monospace

.log-message
  font-size 14px
  color #333
  margin-bottom 0

.log-message:nth-child(odd)
  background-color #f1f1f1

.log-message:nth-child(even)
  background-color #e7e7e7

.error
  border 2px solid red
  background-color #ffe6e6